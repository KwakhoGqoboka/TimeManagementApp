<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbb"
    android:padding="16dp">

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Date"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dateStartTime"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/dateLabel"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Select date"
        android:inputType="date|textLongMessage|datetime"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey" />

    <TextView
        android:id="@+id/dateEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateStartTime"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Start Time"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dateDescription"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/dateEndTime"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Select start time"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey" />

    <TextView
        android:id="@+id/dateCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateDescription"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="End Time"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/endTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/dateCategory"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Select end time"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey" />

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endTimeEditText"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Description"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/descriptionLabel"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Enter description"
        android:inputType="textLongMessage"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey" />

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Category"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/categoryEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/categoryLabel"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Enter category"
        android:inputType="textLongMessage"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey" />

    <ImageView
        android:id="@+id/uploadImage1"
        android:layout_width="66dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="196dp"
        android:layout_marginBottom="194dp"
        android:src="@drawable/baseline_camera_alt_24" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Save"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>