<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbb"
    android:padding="16dp">

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Catergory name"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/dateLabel"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Catergory name"
        android:inputType="date|textShortMessage|textLongMessage"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/startTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateEditText"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Minimum Hours"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/startTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/startTimeLabel"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Hours"
        android:inputType="textLongMessage|time"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/endTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startTimeEditText"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Maximum Hours"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/endTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/endTimeLabel"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Hours"
        android:inputType="textLongMessage|time"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endTimeEditText"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Description"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/descriptionLabel"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Description"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Budget"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/categoryEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/categoryLabel"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:hint="  Budget"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorgrey"
        android:textIsSelectable="false"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/overpass_mono_light"
        android:text="Save"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/uploadImage"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="196dp"
        android:layout_marginBottom="190dp"
        android:src="@drawable/baseline_camera_alt_24" />

</RelativeLayout>